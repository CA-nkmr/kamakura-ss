@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&display=swap');


html { font-size: 62.5%; }

body{
    font-family: 'Noto Sans JP', "Hiragino Sans", "游ゴシック" , "Yu Gothic" , "游ゴシック体" , "YuGothic" , "Helvetica Neue" , Helvetica , Arial , Verdana , Roboto , "ヒラギノ角ゴ Pro W3" , "Hiragino Kaku Gothic Pro" , "Meiryo UI" , "メイリオ" , Meiryo , "ＭＳ Ｐゴシック" , "MS PGothic" , sans-serif;
    color:#262626;
    line-height: 1.8;
    font-size:1.6rem;
}

div{
  box-sizing:border-box;
}

.sim {
  text-align: center;
  /* background: url(/energy_saving/assets/images/bg.jpg) no-repeat;
  background-size: cover;
  background-attachment: fixed;
  background-position: center top;
  min-height: 100vh; */
}
.sim .sp_only{
  display: none;
}
.sim .content-body{
  padding:80px 20px;
}
.sim h1{
  font-size:4rem;
  font-weight:700;
}
.sim-header {
  margin-bottom:50px;
}
.sim-header .num{
  font-size:10rem;
  font-weight:700;
  color:#39AEA9;
  font-family: "sofia-pro-soft", sans-serif;
}
.sim-header h2{
  font-size:3rem;
  font-weight:700;
  line-height: 1.5;
}
.sim-header .hz{
  font-size:1.6rem;
}
.sim-header .ex{
  font-size:2.1rem;
  margin-top:30px;
  line-height: 1.3;
}
.sim-header .ex span:nth-of-type(1){
  font-weight:700;
  color:#515151;
}
.sim-header .ex span:nth-of-type(2){
  font-weight:700;
  color:#39AEA9;
}
.sim-header .ex a{
  color:#515151;
  display: inline-block;
  border-bottom:1px solid #515151;
  margin:0 3px;
}
.sim-header .ex a:after{
  content:"";
  display: inline-block;
  width: 10px;
  height: 10px;
  margin: 0 10px;
  border-bottom: 1px solid #515151;
  border-right: 1px solid #515151;
  transform: translateY(-5px) rotate(45deg);
}
.sim-header .ex a:hover{
  color:#61BEBA;
  border-color: #61BEBA;
}
.sim-header .ex a:hover:after{
  border-bottom: 1px solid #61BEBA;
  border-right: 1px solid #61BEBA;
}
.sim-header .caution{
  font-size:1.7rem;
  margin-top:15px;
}
.sim .section{
  max-width:1140px;
  margin:50px auto 0;
}
.sim .section .col{
  flex-basis:calc((100% - 60px)/3);
  border:4px solid #61BEBA;
  border-radius: 20px;
  padding:0 30px;
  background-color: #fff;
  padding-bottom:40px;
}
.sim .section .col .num{
  font-size:10rem;
  font-weight:700;
  color:#39AEA9;
  font-family: "sofia-pro-soft", sans-serif;
  margin:0;
}
.sim .section .col h2{
  font-size:2.2rem;
  display:flex;
  justify-content: center;
  align-items: center;
  height:2em;
  line-height: 1.5;
}
.sim .section .col .img{
  max-width:250px;
  margin:40px auto;
  height:260px;
}

.sim .section .col .img img{
  width:100%;
  height:100%;
  object-fit: contain;
}

.drop_down{
  width:250px;
  border:1px solid #39AEA9;
  background: #E0F2F1;
  border-radius: 5px;
  position: relative;
  transition:0.3s;
  margin:1em auto;
  
}
.drop_down:hover{
  background: #B8E2E0;
  -webkit-transition: all .5s;
  transition: all .5s;
}

/* .drop_down > a {
  display: block;
  font-size:1.5rem;
  font-weight:500;
  text-align: center;
  color:#006A77;
  line-height: 48px;
} */

/* .drop_down > a:hover {
  color: #B8E2E0;
} */

ul.menu__second-level {
  visibility: hidden;
  opacity: 0;
  z-index: 1;
}

.drop_down > a:hover {
  /* background: #072A24; */
  -webkit-transition: all .5s;
  transition: all .5s;
}

.menu__second-level li {
  border-bottom: 1px solid #E5E5E5;
}
.menu__second-level li:last-child{
  border-bottom:none;
}

/* 下矢印 */
.drop_down .popup-open1:after,
.drop_down .popup-open2:after {
  position:absolute;
  top:50%;
  right:20px;
  /* margin-top:-6px; */
  content: '';
  display: inline-block;
  width: 7px;
  height: 7px;
  margin: 0 0 0 15px;
  border-right: 2px solid #006A77;
  border-bottom: 2px solid #006A77;
  transform: translateY(-5px) rotate(45deg);
  transition:0.2s;
}
/* .drop_down:hover:after{
  transform: rotate(-135deg);
} */

.sim .section .col .drop_down {
  position: relative;
}
#popup1,
#popup2{
  display: none; /* label でコントロールするので input は非表示に */
}

.popup-open1,
.popup-open2 {
  cursor: pointer; /* マウスオーバーでカーソルの形状を変えることで、クリックできる要素だとわかりやすいように */
  display: block;
  font-size:1.5rem;
  font-weight:500;
  text-align: center;
  color:#006A77;
  line-height: 48px;
}
.sim .section .col .drop_down .menu__second-level .close{
  /* background: rgba(0,0,0,0.5); */
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: -1;
}

.menu__second-level {
  display: none; /* input にチェックが入るまでは非表示に */
}

#popup1:checked ~ .menu__second-level,
#popup2:checked ~ .menu__second-level  {
  display: block;
  top: 50px;
  visibility: visible;
  opacity: 1;
}
#popup1:checked ~ .popup-open1:after,
#popup2:checked ~ .popup-open2:after{
  transform: rotate(-135deg);
} 


.drop_down ul.menu__second-level {
  position: absolute;
  top: 40px;
  left:-1px;
  width: 100%;
  background: #fff;
  -webkit-transition: all .2s ease;
  transition: all .2s ease;
  margin:0;
  padding:0;
  list-style: none;
  border:1px solid #39AEA9;
  border-radius:5px;
  box-shadow: 2px 2px 2px rgba(0,0,0,0.2);
  z-index: 1;
}
.drop_down ul.menu__second-level li{
  position:relative;
  width:100%;
  z-index: 10;
}
.drop_down ul.menu__second-level li a{
  display: block;
  color:#515151;
  font-size:1.4rem;
  text-align: left;
  line-height: 3;
  padding-left:20px;
  transition:0.2s;
}
.drop_down ul.menu__second-level li a:hover{
  background-color: #E0F2F1;
}
.drop_down ul.menu__second-level li:first-child a:hover{
  border-radius:5px 5px 0 0;
}
.drop_down ul.menu__second-level li:last-child a:hover{
  border-radius:0 0 5px 5px;
}

