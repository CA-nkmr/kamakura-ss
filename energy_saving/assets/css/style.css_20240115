} */
.sim .section .col .btn{
  width:250px;
  background: #39AEA9;
  border-radius: 5px;
  position: relative;
  transition:0.3s;
  margin:1em auto;
}
.sim .section .col .btn  a{
  display: block;
  font-size:2rem;
  font-weight:500;
  text-align: center;
  color:#fff;
  line-height: 50px;
}
.sim .section .col .btn:after{
  content: '';
  display: block;
  width:7px;
  height:7px;
  border-top:2px solid #fff;
  border-right:2px solid #fff;
  transform: rotate(45deg);
  position: absolute;
  right:20px;
  top:50%;
  margin-top:-4px;
}
.sim .section .col .btn:hover{
  background: #006A77;
}

.sim .section.main{
  border:4px solid #61BEBA;
  border-radius: 20px;
  padding:0 50px;
  background-color: #fff;
}

.sim .section__inner ul{
  display: flex;
  justify-content: center;
  border-bottom:1px solid #707070;
}
.sim .section__inner ul li{
  flex-basis: 190px;
  margin:0 10px;
  background-color: #DEDEDE;
  border-radius: 10px 10px 0 0;
  transition:0.3s;
}
.sim .section__inner ul li a{
  display: block;
  line-height: 50px;
  font-size:1.6rem;
  font-weight:500;
  text-decoration: none;
  color:#515151;
  transition:0.3s;
}
.sim .section__inner ul li.active{
  background-color: #39AEA9;
}
.sim .section__inner ul li.active a{
  color:#fff;
}
.sim .section__inner ul li:hover{
  background-color: #006A77;
}
.sim .section__inner ul li:hover a{
  color:#fff;
} 

.sim .model{
  width:920px;
  margin:50px auto 30px;
  display: flex;
  text-align: center;
  position:relative;
}
.sim .model::after{
  content:'';
  display: block;
  width: 0;
  height: 0;
  border-left: 25px solid #fff;
  border-top: 15px solid transparent;
  border-bottom: 15px solid transparent;
  position:absolute;
  top:50%;
  left:50%;
  margin-top:-13px;
  margin-left:-12px;
}
.sim .model .before{
  flex-basis: 50%;
  color:#fff;
  background: #515151;
  border-radius: 10px 0 0 10px;
  padding:20px 0;
  line-height: 1.5;
}
.sim .model .after{
  flex-basis: 50%;
  color:#fff;
  background: #39AEA9;
  border-radius: 0 10px 10px 0;
  padding:20px 0;
  line-height: 1.5;
}
.sim .model h3{
  font-size:3rem;
  font-weight:500;
  line-height: 1.5;
}
.sim .model p{
  font-size:1.6rem;
  line-height: 1;
}
.sim .reduction{
  position:relative;
  padding:40px 0;
  width:920px;
  margin:auto;
}
.sim .reduction p{
  font-size:2.4rem;
  font-weight:700;
  line-height: 1;
}
.sim .reduction p span.rate{
  font-size:10rem;
  font-weight:700;
  font-family: "sofia-pro-soft", sans-serif;
  color:#E36262;
}
.sim .reduction p span.percent{
  font-size:5rem;
  font-weight:700;
  font-family: "sofia-pro-soft", sans-serif;
  color:#E36262;
}
.sim .reduction p span.red{
  font-size:6rem;
  font-weight:700;
  color:#E36262;
}

.sim .reduction .img{
  position:absolute;
  width:200px;
  height:130px;
  top:40px;
  right:20px;
}
.sim .reduction .img img{
  width:100%;
  height:auto;
}

.sim .compare{
  width:920px;
  margin:auto;
}
.sim .compare table{
  width:100%;
  background:#F7F7F7;
  border-radius: 10px;
  margin:0 0 50px;
}
.sim .compare table th,
.sim .compare table td{
  text-align: center;
  line-height: 50px;
}
.sim .compare table tr.mi{
  color:#39AEA9;
  font-size:1.6rem;
}
.sim .compare table tr.mi th{
  line-height: 1.8;
  padding:30px 0 20px;
}
.sim .compare table tr.mi th:nth-child(2):before{
  content:'';
  width:50px;
  height:50px;
  display: block;
  background: url('/cms/wp-content/themes/kmkr/images/sim/icon_kwh.png') no-repeat;
  background-size: contain;
  margin:auto;
}
.sim .compare table tr.mi th:nth-child(3):before{
  content:'';
  width:50px;
  height:50px;
  display: block;
  background: url('/cms/wp-content/themes/kmkr/images/sim/icon_co2.png') no-repeat;
  background-size: contain;
  margin: auto
}
.sim .compare table tr.mi th:nth-child(4):before{
  content:'';
  width:50px;
  height:50px;
  display: block;
  background: url('/cms/wp-content/themes/kmkr/images/sim/icon_cost.png') no-repeat;
  background-size: contain;
  margin: auto;
}
.sim .compare table tr.before{
  color:#515151;
  font-size:2rem;
}
.sim .compare table tr.befoer th,
.sim .compare table tr.after th,
.sim .compare table tr.result th{
  font-weight:500;
}
.sim .compare table tr.after{
  color:#39AEA9;
  font-size:2rem;
}
.sim .compare table tr.after th,
.sim .compare table tr.after td{
  padding-bottom:20px;
}
.sim .compare table tr.result{
  color:#E36262;
  font-size:2.3rem;
  background:#FBEAEA;
  border-radius: 10px;
  border-top:1px solid #707070;
}
.sim .compare table tr.result th,
.sim .compare table tr.result td{
  line-height: 80px;
}
.sim .compare table tr.result th{
  border-bottom-left-radius: 10px;
}
.sim .compare table tr.result td:last-child{
  border-bottom-right-radius: 10px;
}
.sim .compare .btn a{
  position:relative;
  display: block;
  line-height: 70px;
  width:520px;
  margin:80px auto;
  background: #39AEA9;
  border-radius:10px;
  color:#fff;
  font-size:1.6rem;
  font-weight:500;
  text-align: center;
  text-decoration: none;
  transition:0.3s;
}
.sim .compare .btn a:after{
  content:'';
  display: inline-block;
  width:14px;
  height:14px;
  background: url('/cms/wp-content/themes/kmkr/images/sim/icon_blank.png') no-repeat 50%;
  background-size: contain;
  padding-left:1em;
  /* position:absolute;
  top:50%;
  right:50%;
  margin-top:-7px;
  margin-right:-5em; */
}
.sim .compare .btn a:hover{
  background: #006A77;
}


@media only screen and (max-width: 1080px) {
  .sim .section .col .img{
    width:100%;
    margin:40px auto;
    height:260px;
  }
  .drop_down{
    width:100%;
  }
  .sim .section .col .btn{
    width:100%;
  }
}

@media only screen and (max-width: 980px) {
  .sim h1{
    font-size:2.6rem;
  }
  .sim .sim-header .num{
    font-size:4rem;
  }
  .sim .section .col .num{
    font-size:4rem;
  }
  .sim .pc_only{
    display: none;
  }
  .sim .sp_only{
    display: block;
  }
  .sim .section .col{
    flex-basis:calc((100% - 15px)/2);
    padding:20px;
    border-radius: 18px;
  }
  .sim .section .col h2{
    font-size:1.4rem;
  }
  .sim .section .col.change{
    flex-basis:100%;
    margin-bottom:15px;
  }
  .sim .section .col .img{
    max-height:120px;
    min-height:90px;
    margin:20px auto;
  }

  .sim .section .col.change .img{
    max-width:300px;
    height:100px;
  }
  .drop_down a,
  .sim .section .col .btn a{
   font-size:1.4rem;
   padding-right:10px;
  }
  .sim .section .col .btn:after{
    right:30px;
   }

  .body__wrap.sim{
    padding-top:60px;
  }
  .sim-header{
    margin-bottom:20px;
    padding:0 20px;
  }
  .sim-header h2{
    font-size:2rem;
  }
  .sim-header .hz{
    font-size:1.4rem;
  }
  .sim-header .ex{
    font-size:1.8rem;
    line-height: 1.5;
  }
  .sim-header .ex a:after{
    width: 6px;
    height: 6px;
    margin: 0 5px;
  }
  .sim-header .caution{
    font-size:1.4rem;
  }
  .sim .model{
    width:100%;
    margin:30px auto 0;
    font-size:1.2rem;
    padding:0 20px;
  }
  .sim .model h3{
    font-size:1.7rem;
    line-height: 1.6;
  }
  
  .sim .reduction{
    position:relative;
    padding:30px 0;
    width:920px;
    margin:auto;
  }
  .sim .reduction p{
    font-size:1.6rem;
  }
  .sim .reduction p span.rate{
    font-size:6.9rem;
  }
  .sim .reduction p span.percent{
    font-size:3.5rem;
  }
  .sim .reduction p span.red{
    font-size:4.1rem;
  }
  
  .sim .content-body{
    padding-top:40px;
  }
  .sim .content-body.sim_lev2{
    padding:40px 0;
  }
  .sim .section.main{
    border-right:none;
    border-left:none;
    border-radius: 0;
    background-color: #fff;
    padding:20px 0;
  }

  .sim .section__inner ul{
    justify-content: space-between;
    padding:0 20px;
  }
  .sim .section__inner ul li{
    flex-basis: calc((100% - 20px)/4);
    border-radius:8px 8px 0 0;
    margin:0;
  }
  .sim .section__inner ul li a{
    line-height: 1.2;
    font-size:1.2rem;
    padding:5px;
  }
  .sim .section.main .reduction{
    width:100%;
    padding:30px 20px;
  }
  .sim .section.main .reduction .img{
    display: none;
  }
  .sim .compare{
    width:100%;
  }
  .sim .compare .table-wrap{
    width:100%;
    overflow-x: auto;
    padding:0 20px;
    margin-bottom:20px;
  }
  .sim .compare .table-wrap table{
    width:570px;
    margin-bottom:20px;
  }
  .sim .compare table th,
  .sim .compare table td{
    line-height: 40px;
  }
  .sim .compare table tr.mi{
    font-size:1.4rem;
  }
  .sim .compare table tr.mi th:before{
    width:43px!important;
    height:43px!important;
  }
  .sim .compare table tr.mi th{
    padding:20px auto;
  }
  .sim .compare table tr.before,
  .sim .compare table tr.after{
    font-size:1.6rem;
  }
  .sim .compare table tr.after th,
  .sim .compare table tr.after td{
    padding-bottom:10px;
  }
  .sim .compare table tr.result{
    font-size:1.8rem;
  }
  .sim .compare table tr.result th,
  .sim .compare table tr.result td{
    line-height: 60px;
  }
  .sim .compare .btn{
    padding:0 20px;
  }
  .sim .compare .btn a {
    width:100%;
    max-width:315px;
    margin:20px auto;
    font-size:1.6rem;
    line-height: 50px;
  }
}